<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.completewallet.grocery.Activity.Product">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="wrap_content"
            android:background="@color/white"
            android:layout_margin="10dp"
            android:layout_height="230dp"/>

        <LinearLayout
            android:id="@+id/SliderDots"
            android:layout_below="@+id/viewPager"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:textSize="18sp"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="Kissan Jam - Strawberry Blast, 320 gm Bottle"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="bold"
                android:textColor="#000"
                android:text="MRP: Rs. 110.00"/>

            <Button
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:background="@drawable/border"
                android:drawableTint="#17a5da"
                android:textColor="#17a5da"
                android:layout_margin="5dp"
                android:text="Buy Now"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/selector"
                android:drawableTint="@color/colorRed"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_add_shopping_cart"
                android:layout_marginLeft="@dimen/activity_vertical_margin"/>

            <RatingBar
                android:id="@+id/myRatingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:numStars="5"
                android:isIndicator="true"
                android:progress="50"
                android:progressTint="@android:color/holo_orange_light"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:id="@+id/productreviews"
                android:textColor="@color/colorPrimary"
                android:layout_marginRight="@dimen/activity_vertical_margin"
                android:textSize="@dimen/activity_vertical_margin"
                android:text="2 Review"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Striking the perfect blend between sweet and tangy, the Kissan Strawberry Blast Jam is a rare combination of lush, red, succulent strawberries with a tiny bite of the seed, to create mouth-watering spread with a burst of real fruit flavour."/>



    </LinearLayout>

</ScrollView>
